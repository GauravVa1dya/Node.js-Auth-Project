<section
  style="
    background: url('https://img.freepik.com/free-vector/realistic-white-golden-geometric-background_79603-2032.jpg?w=996&t=st=1712596632~exp=1712597232~hmac=beb3084791fffc6613ae469ab32888714536f88804a5548f1e95fb8389b66594');
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    height: 80vh;
    width: 99vw;
    padding-top: 20px;
    text-align: center;
    font-family: monospace;
  "
>
  <a style="font-size: 20px" href="/user/homepage">Go to Home</a>

  <h2 style="font-size: 25px">Change Password</h2>
  <% if (message) { %>
  <p
    style="
      font-size: 16px;
      color: white;
      background-color: #4b9cd3;
      width: fit-content;
      padding: 6px;
      margin: auto;
      margin-bottom: 10px;
    "
  >
    <%= message %>
  </p>
  <% } %>
  <form action="/user/change-password" method="post">
    <input
      type="password"
      name="oldPassword"
      placeholder="Old Password"
      size="40"
      style="font-size: 16pt; font-family: monospace; padding: 10px"
      required
    /><br />
    <input
      type="password"
      name="newPassword"
      placeholder="New Password"
      size="40"
      style="
        font-size: 16pt;
        font-family: monospace;
        margin-top: 20px;
        padding: 10px;
      "
      required
    /><br /><br />
    <div
      style="text-align: center; margin: 0 auto; width: 300px; padding: 20px"
      class="g-recaptcha"
      data-sitekey="6Ld_ZrUpAAAAAEeA4EHRFOlDtVVhnzg1U8_0nHIv"
    ></div>
    <button
      type="submit"
      size="40"
      style="
        font-size: 14pt;
        font-family: monospace;
        padding: 10px;
        margin-right: 20px;
      "
    >
      Change Password
    </button>
    <button
      onclick="signOut()"
      size="40"
      style="font-size: 14pt; font-family: monospace; padding: 10px"
    >
      Log Out
    </button>
  </form>

  <h3 style="text-align: center">
    Don't have an account? <a href="/user/signup">Sign Up</a>
  </h3>
  <h3 style="text-align: center">
    Already have an account? <a href="/user/signin">Sign In</a>
  </h3>
</section>

<script>
  // Function to handle sign-out
  function signOut() {
    // Perform sign-out logic (e.g., redirect to sign-out route)
    window.location.href = "/user/signout";
  }
</script>
